<h1>Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Creator</th>
    <th>Performer</th>
    <th>Completed</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.creator %></td>
      <td><%= task.performer %></td>
      <td><%= task.completed %></td>
      <td><%= link_to t('show'), task %></td>
      <td><%= link_to t('edit'), edit_task_path(task) %></td>
      <td><%= link_to t('destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_task'), new_task_path %>